{% extends '@PrestaShop/Admin/layout.html.twig' %}
{#{% form_theme blockForm _self %}#}
{% form_theme blockForm '@Modules/softoneerp/views/templates/admin/fields.html.twig' %}
{% set formAction = url('admin_softoneerp_block_save_process') %}

{% block content %}
	{{ form_start(blockForm, {'action': formAction, 'attr': {'class': 'form', 'id': 'block_form'}}) }}

	<div class="row justify-content-center">
		{% block softoneerp_block %}
			<div class="col-xl-10">
				<div class="card">
					<h3 class="card-header">
						<i class="material-icons">mode_edit</i>
						{{ 'Configuration ERP system'|trans({}, 'Modules.GroupUsers.Admin') }}
					</h3>

					<div class="card-block row">
						<div class="card-text">
							{{ form_row(blockForm.softoneerp_block.mode) }}
							{{ form_row(blockForm.softoneerp_block.baseurl) }}
							{{ form_row(blockForm.softoneerp_block.login) }}
							{{ form_row(blockForm.softoneerp_block.password) }}
							{{ form_row(blockForm.softoneerp_block.appid) }}
							{{ form_row(blockForm.softoneerp_block.company) }}
							{{ form_row(blockForm.softoneerp_block.branch) }}
							{{ form_row(blockForm.softoneerp_block.module) }}
							{{ form_row(blockForm.softoneerp_block.refid) }}
						</div>
					</div>
					<div class="card-footer">
						<div class="d-flex justify-content-between">
							<a href="{{ url('admin_softoneerp_block_form') }}" class="btn btn-secondary">{{ 'Cancel'|trans({}, 'Admin.Actions') }}</a>
							<button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
						</div>
					</div>
				</div>
			</div>
		{% endblock %}
	</div>
	{{ form_end(blockForm) }}
{% endblock %}


{% block javascripts %}
	{{ parent() }}
{% endblock %}
